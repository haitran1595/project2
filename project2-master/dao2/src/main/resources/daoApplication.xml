<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">


    <bean id="redshiftDataSource"
          class="org.springframework.jdbc.datasource.DriverManagerDataSource">

        <property name="javax.persistence.jdbc.url" value="jdbc:derby://localhost:1527/Sport"/>
        <property name="javax.persistence.jdbc.user" value="haitran"/>
        <property name="javax.persistence.jdbc.driver" value="org.apache.derby.jdbc.ClientDriver"/>
        <property name="javax.persistence.jdbc.password" value="haitran"/>
    </bean>


</beans>